        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Center" Margin="114,350,104,0" VerticalAlignment="Top" Width="74" Height="29" BorderThickness="0" FontFamily="Lucida Sans" FontSize="16"/>

