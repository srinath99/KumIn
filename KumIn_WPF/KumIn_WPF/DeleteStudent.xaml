<Window x:Class="KumIn_WPF.DeleteStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KumIn_WPF"
        mc:Ignorable="d"
        Title="DeleteStudent" Height="200" Width="300" FontFamily="Lucida Sans" FontSize="13">
    <Grid>
        <TextBox x:Name="txtBarcode" HorizontalAlignment="Left" Height="23" Margin="110,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" VerticalContentAlignment="Center"/>
        <Label x:Name="lblBarcode" Content="Barcode:" HorizontalAlignment="Left" Margin="19,73,0,0" VerticalAlignment="Top" Height="23" Width="86" FontFamily="Lucida Sans" FontSize="13"/>
        <TextBlock x:Name="lblDeleteStudent" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Delete Student" VerticalAlignment="Top" FontFamily="Lucida Sans" FontSize="24"/>
        <Button x:Name="button" Content="Delete" HorizontalAlignment="Center" Margin="0,136,0,0" VerticalAlignment="Top" Width="75" FontSize="16" BorderThickness="0" Click="button_Click"/>

    </Grid>
</Window>
